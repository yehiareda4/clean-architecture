<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ClickableView">
        <item name="colorControlHighlight">@android:color/darker_gray</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

    <!--    btn primary-->
    <style name="button_primary" parent="Widget.MaterialComponents.Button">
        <item name="rippleColor">@color/grey_light</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="background">@color/colorPrimary</item>
        <item name="cornerRadius">@dimen/_10sdp</item>
        <item name="marginHorizontal">@dimen/_16sdp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="button_primary_small" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">@dimen/_200sdp</item>
        <item name="android:layout_height">@dimen/_43sdp</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="rippleColor">@color/grey_light</item>
        <item name="cornerRadius">@dimen/_10sdp</item>
    </style>

<!--    btn green-->
    <style name="button_green" parent="button_primary">
        <item name="rippleColor">@color/colorWhite</item>
        <item name="backgroundTint">@color/colorGreen</item>
        <item name="background">@color/colorGreen</item>
    </style>


<!--    btn red-->
    <style name="button_red" parent="button_primary">
        <item name="rippleColor">@color/colorWhite</item>
        <item name="backgroundTint">@color/colorRed</item>
        <item name="background">@color/colorRed</item>
    </style>


<!--    btn grey-->
    <style name="button_grey" parent="button_primary">
        <item name="rippleColor">@color/colorWhite</item>
        <item name="backgroundTint">@color/colorGrey</item>
        <item name="background">@color/colorGrey</item>
    </style>





    <!--    Card view-->
    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomRight">@dimen/_40sdp</item>
        <item name="cornerSizeBottomLeft">@dimen/_40sdp</item>
    </style>


    <!--    bottom sheet-->
    <style name="BottomSheetDialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetBackground</item>
    </style>

    <style name="bottomSheetBackground" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_top_rounded_white</item>
    </style>


<!--    transparent bottom sheet-->
    <style name="CustomBottomSheetDialogThemeTrans" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/trans</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@color/trans</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>


    <!--    dialog-->
    <style name="DialogStyle" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">97%</item>
        <item name="android:windowMinWidthMinor">97%</item>
        <item name="dialogCornerRadius">16dp</item>
    </style>

    //TextView

    <style name="tv_parent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/_1sdp</item>
        <item name="android:paddingBottom">@dimen/_1sdp</item>
        <item name="android:paddingStart">@dimen/padding_low</item>
        <item name="android:paddingEnd">@dimen/padding_low</item>
        <item name="android:layout_marginTop">@dimen/_6sdp</item>
        <item name="android:layout_marginStart">@dimen/margin_high</item>
        <item name="android:layout_marginEnd">@dimen/margin_high</item>
    </style>

    <style name="tv_title" parent="tv_parent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="tv_sub_title" parent="tv_parent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/demi</item>
        <item name="android:textColor">@color/text_hint</item>
    </style>

    <style name="tv_text_title" parent="tv_parent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="tv_text" parent="tv_parent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_9sdp</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:textColor">@color/text_hint</item>
        <item name="android:textColorHint">@color/text_hint</item>
    </style>

    <style name="tv_error" parent="tv_parent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:textColor">@color/text_red</item>
    </style>

    <style name="tv_custom" parent="tv_parent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    // EditText

    <style name="layout_input_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_marginStart">@dimen/_11sdp</item>
        <item name="android:layout_marginEnd">@dimen/_11sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxBackgroundColor">@color/colorWhite</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="layout_selection_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_marginStart">@dimen/_11sdp</item>
        <item name="android:layout_marginEnd">@dimen/_11sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxBackgroundColor">@color/colorWhite</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="et_parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/_4sdp</item>
        <item name="android:paddingBottom">@dimen/_4sdp</item>
        <item name="android:paddingStart">@dimen/padding_medium</item>
        <item name="android:paddingEnd">@dimen/padding_medium</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:layout_marginStart">@dimen/margin_high</item>
        <item name="android:layout_marginEnd">@dimen/margin_high</item>
        <item name="android:color">@color/text_color</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:background">@drawable/shape_componant_input</item>
        <item name="android:textSize">@dimen/_11sdp</item>
    </style>

    <style name="toolbar_title" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>